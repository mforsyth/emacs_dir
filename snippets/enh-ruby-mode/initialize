def initialize${1:(${2:arguments})}
  ${2:$(mapconcat
        (lambda (var) (concat "self." var " = " var))
        (split-string text ", " t)
        "\n")}$0
end

private

attr_accessor ${2:$(mapconcat
                    (lambda (var) (concat ":" var))
                    (split-string text ", " t)
                    ", ")}